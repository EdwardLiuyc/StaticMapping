<?xml version="1.0"?>
<edward_liu>
  <static_mapping>
    <whole_options 
      export_file_path="pcd/"
      map_package_path="pkgs/test/" />
    <map_package_options
      enable="false"
      border_offset="100"
      piece_width="500."
      cloud_file_prefix="part_"
      descript_filename="map_package.xml" />
    <filters>
      <!-- type: 
        0 : int
        1 : float  -->
      <filter name="Range" >
        <param type="1" name="max_range"> 75. </param>
        <param type="1" name="min_range"> 4.5 </param>
      </filter>
      <filter name="RandomSampler" >
        <param type="1" name="sampling_rate"> 0.45 </param>
      </filter>
    </filters>
    <front_end_options accumulate_cloud_num="151">
      <!-- matcher type  
        0: none 
        1: icp using pointmatcher 
        2: icp using libicp 
        3: ndt&gicp 
        4: kfpcs(not available now)
        5: 
        6: fast icp(in test) -->
      <scan_matcher_options type="6" >
        <registrator_options type = "6">
          <param name="dist_outlier_ratio"> 0.7 </param>
          <param name="knn_normal_estimate"> 7 </param>
          <param name="max_iteration"> 100 </param>
        </registrator_options>
      </scan_matcher_options>
      <!-- translation unit: m
           angle unit: degree -->
      <motion_filter 
        translation_range="1"
        angle_range="20." />
      <!-- imu type 
          0: normal type
          1: imu in ins(combined imu) -->
      <imu_options 
        use_imu="true"
        imu_frequency="200."
        type="0"
        gravity_constant="9.8" />
      <motion_compensation_options 
        enable="true"
        use_average="true" />
    </front_end_options>
    <back_end_options>
      <!-- type just the same as front end -->
      <submap_matcher_options 
        type="6"
        accepted_min_score="0.75">
        <registrator_options type = "6">
          <param name="dist_outlier_ratio"> 0.7 </param>
          <param name="knn_normal_estimate"> 7 </param>
          <param name="max_iteration"> 100 </param>
        </registrator_options>
      </submap_matcher_options>
      <submap_options 
        frame_count="2"
        enable_voxel_filter="true"
        enable_random_sampleing="false"
        enable_check="false"
        random_sampling_rate="0.5"
        enable_disk_saving="false"
        disk_saving_delay="30"
        saving_name_prefix="s_" />
      <isam_optimizer_options 
        use_odom="false"
        use_gps="true" 
        output_graph_pic="false" />
      <loop_detector_setting 
        use_gps="false"
        use_descriptor="true"
        output_matched_cloud="false"
        loop_ignore_threshold="20"
        trying_detect_loop_count="1"
        max_close_loop_distance="8."
        max_close_loop_z_distance="3."
        m2dp_match_score="0.97"
        accept_scan_match_score="0.8"
        nearest_history_pos_num="5" />
    </back_end_options>
    <output_mrvm_settings
      output_average="false"
      output_rgb="true"
      prob_threshold="0.57" 
      low_resolution="1." 
      high_resolution="0.1"
      hit_prob="0.55"
      miss_prob="0.48"
      z_offset="0."
      max_point_num_in_cell="10">
    </output_mrvm_settings>
  </static_mapping>
</edward_liu>
